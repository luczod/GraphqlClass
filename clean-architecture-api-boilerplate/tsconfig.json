{
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2020",
    "removeComments": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": []
}
